{
  "manifest_version": 3,
  "name": "GCP Dark Theme",
  "description": "Toggle with ease between dark and light theme for the Google Cloud Console.",
  "version": "1.0.0",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://console.cloud.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/img/icon16.png",
    "32": "assets/img/icon32.png",
    "64": "assets/img/icon64.png",
    "128": "assets/img/icon128.png"
  }
}
